<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
        <h1 class="text-center title">Edit Comment</h1>

        <form method="POST"
        action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
            </div>   
            <div class="form-group text-center">           
            <button class="btn btn-primary">Submit</button>
            <a class="btn btn-danger" href="/campgrounds/<%= campground_id %>">Cancel</a>
            </div>
        </form>
        </div>

        <div class="col-md-3">
        </div> 

    </div>
</div>

<%- include("../partials/footer") %>