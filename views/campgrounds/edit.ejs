<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
        <h1 class="text-center title">Edit <%= campground.name %></h1>

        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" 
            enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="campground[name]" 
                value="<%= campground.name %>">
            </div>
          
            <div class="form-group">
                <label for="price">Price in $</label>
                <input id="price" class="form-control" type="number" name="campground[price]" 
                value="<%= campground.price %>"
                 min="0.00" step="0.01">
            </div>

            <div class="form-group">
                <label for="image">Change Image</label> 
                <img id="imgthumb" class="img-thumbnail" src="<%=campground.image%>">   
                <input type="file" id="image" name="image" accept="image/*"  
                value="<%= campground.image %>">             
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control" type="text" name="campground[description]" 
                value="<%= campground.description %>">
            </div>

            <div class="form-group text-center">           
            <button class="btn btn-primary">Submit</button>
            <a class="btn btn-danger" href="/campgrounds/<%= campground._id %>">Cancel</a>
            </div>

        </form>
        </div>

        <div class="col-md-3">
        </div>

    </div>
</div>

<%- include("../partials/footer") %>